extends layouts/default.pug

block content
  main
    
    p(class="hidden-val")#saved-id

    form(onsubmit="return false;" novalidate)#new-class
      h1 Review your class & complete the form to confirm your session
      ul
        li
          input(type="text" name="name" class="validate-this field-style field-split align-left" placeholder="Your Name ex. John Walsh" required)#faculty-name
          input(type="text" name="course" class="validate-this field-style field-split align-right" placeholder="lib19@georgetown.edu" required)#email
          

        li
          input(type="text" name="course" class="validate-this field-style field-split align-left" placeholder="Course Code ex. HIST 180" required)#course-name
          input(type="text" name="date" class="validate-this field-style field-split align-right" placeholder="Course Date" required)#course-date
          

        li(style="text-align: right;")
          input(type="text" name="time" class="validate-this field-style field-split align-left" placeholder="Course Start Time" required)#course-time
          input(type="text" name="students" class="validate-this field-style field-split align-right spinner-text" placeholder="Number of Students" required)#students

          input(type="hidden" name="selections")#selections
          
          p#form-errors

        li
          input(type="submit" value="Submit Class")#class-submit

    #your-class
      h3 Instruction Selections 
        span#total-time
      ul

