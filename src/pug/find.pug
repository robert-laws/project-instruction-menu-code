extends layouts/default.pug

block content
  main
    section#display-options
      h1 Find Your Class

      p Search using your name and course code

      #new-class
        ul#find-form.new-class__find
          li
            input(type="text" name="name" class="validate-this field-style field-split align-left" placeholder="Your Name ex. John Walsh" required)#faculty-name
            input(type="text" name="course" class="validate-this field-style field-split align-right" placeholder="Course Code ex. HIST 180" required)#course-name
          
          li
            input(type="button" value="Find Your Class")#class-find

            p.error.alert-text


    section#display-view
      h1 Your Class Details

      hr
      
      span#class-id

      .class-details-view
        .class-details-view__data
          .class-details-view__data-personal
            p
              strong Faculty Name: 
              span#get-faculty-name

            p
              strong Course Title: 
              span#get-course-title

            p
              strong Course Date: 
              span#get-date

            p
              strong Course Start Time: 
              span#get-time

            p
              strong Number of Students: 
              span#get-students

          .class-details-view__data-cancel
            form(onsubmit="return false;" novalidate)#cancel-class
              input(type="text" name="class-id" hidden)#class-remove-id
              input(type="submit" value="Cancel this Class")#cancel-class

        hr

        div#get-class-details
          h4 Class Instruction Details 
            span#total-time-review